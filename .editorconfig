root = true

[*]
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true
max_line_length          = 80

[meson{.build,_options.txt}]
indent_style = space
indent_size  = 2

[*.json]
indent_style = space
indent_size  = 4

[*.{vala,vapi}]
indent_style = space
indent_size  = 4

[*.{ui,xml,doap}]
indent_style = space
indent_size  = 2
